 #ifndef include_config_h
#define include_config_h

#include <stdint.h>

#if defined(__precision64)
    #define cas_idx_t    int64_t
    #define cas_int_t    int64_t
    #define cas_uint_t   uint64_t
    #define cas_fp_t     double

#elif defined(__precision32)
    #define cas_idx_t    int32_t
    #define cas_int_t    int32_t
    #define cas_uint_t   uint32_t
    #define cas_fp_t     float

#elif defined(__precision16)
    #define cas_idx_t    int16_t
    #define cas_int_t    int16_t
    #define cas_uint_t   uint16_t
    #define cas_fp_t     float

#else
    #define cas_idx_t    int8_t
    #define cas_int_t    int8_t
    #define cas_uint_t   uint8_t
    #define cas_fp_t     float

#endif /* __precisionxx */

#endif /* config_h */